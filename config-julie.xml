<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns     = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "fr.argosapps.retroajax"
        versionCode="10"
        version   = "1.1.0">

    <!-- versionCode is optional and Android only -->

    <name>DashTrip</name>

    <description>
        Test de DashTrip
    </description>

    <author href="http://argosapps.fr" email="contact@argosapps.fr">
        PhM
    </author>
	
<feature name="Notification">
	<param name="android-package" value="org.apache.cordova.Notification" />
</feature>
<feature name="SplashScreen">
    <param name="android-package" value="org.apache.cordova.splashscreen.SplashScreen" />
</feature>

<feature name="http://api.phonegap.com/1.0/device" />
<feature name="http://api.phonegap.com/1.0/geolocation" />


<!--ICON-->	
<!--icone de l'application-->
<icon src="icon.png" />
<icon src="img/icon/android/icon-ldpi.png"   gap:platform="android"	gap:density="ldpi" />
<icon src="img/icon/android/icon-mdpi.png"   gap:platform="android"	gap:density="mdpi" />
<icon src="img/icon/android/icon-hdpi.png"   gap:platform="android"	gap:density="hdpi" />
<icon src="img/icon/android/icon-xhdpi.png"  gap:platform="android"	gap:density="xhdpi" />

